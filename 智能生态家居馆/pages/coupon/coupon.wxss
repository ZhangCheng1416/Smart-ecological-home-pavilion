/* pages/coupon/coupon.wxss */
page {
	background: #f7f7f7
}

.coupon {
	padding: 0 36rpx;
	padding-top: 37rpx
}

.coupon-top {
	width: 100%;
	display: flex;
	align-items: center
}

.coupon-top .left {
	width: 6rpx;
	height: 53rpx;
	background-color: #f75f6a;
}

.coupon-top .right {
	font-size: 32rpx;
	color: #333333;
	margin-left: 27rpx;
	font-family: AdobeHeitiStd-Regular;
}

.coupon-top .right text {
	color: #f75f6a
}

.coupon-center {
	width: 100%
}

.coupon-item {
	width: 100%;
	height: 208rpx;
	background-color: #ffffff;
	box-shadow: 4rpx 3rpx 8rpx 1rpx rgba(0, 0, 0, 0.1);
	margin-top: 39rpx;
	position: relative
}
.coupon-item:last-child{
	margin-bottom: 40rpx;
}
.coupon-item .left {
	position: absolute;
	left: -7rpx
}

.coupon-item .left view {
	width: 15rpx;
	height: 15rpx;
	background: #f3f7f9;
	border-radius: 50%;
	margin-top: 7rpx
}

.coupon-item .right {
	position: absolute;
	right: -7rpx;
	top: 0
}

.coupon-item .right view {
	width: 15rpx;
	height: 15rpx;
	background: #f3f7f9;
	border-radius: 50%;
	margin-top: 7rpx
}

.content {
	display: flex
}

.content-text {
	width: 437rpx;
	height: 208rpx;
	background-image: linear-gradient(121deg,
		#ff4091 0%,
		#ff9e29 100%),
		linear-gradient(#ffffff,
		#ffffff);
	background-blend-mode: normal,
		normal;
}

.content-text view:nth-child(1) {
	padding-top: 30rpx
}

.content-text view {
	font-size: 32rpx;
	color: #fff;
	padding-top: 20rpx;
	text-align: center
}

.content-text view text {
	font-size: 46rpx;
	color: #fff;
	text-align: center
}


.content .right {
	height: 208rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.content .right .btn {
	width: 190rpx;
	height: 53rpx;
	background-color: #fe002f;
	border-radius: 10rpx;
	font-size: 36rpx;
	color: #fff;
	text-align: center;
	margin-right: 30rpx
}

.coupon-center .coupon-item:nth-child(1) .content-text {
	background-image: linear-gradien(121deg#fa7a25 0%, #f42c3c 100%), linear-gradient(#ffffff, #ffffff);
	background-blend-mode: normal, normal;
}

.coupon-center .coupon-item:nth-child(2) .content-text {
	background-image: linear-gradient(121deg, #fa7a25 0%, #f42c3c 100%), linear-gradient(#ffffff, #ffffff);
	background-blend-mode: normal, normal;
}

.coupon-center .coupon-item:nth-child(3) .content-text {
	background-image: linear-gradient(121deg, #ffb100 0%, #ffc406 100%), linear-gradient(#ffffff, #ffffff);
	background-blend-mode: normal, normal;
}
