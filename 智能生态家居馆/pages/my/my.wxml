<!-- 顶部 -->
<view class="my-top">
    <view class="top-img">
        <view class="top-img-left"><image src="/images/me/设置.png"></image></view>
        <view class="top-img-right"><image src="/images/me/消息.png"></image></view>
    </view>
    <!-- 我的头像框 -->
    <view class="top-name">
        <view class="img"> 
          <image src='/images/home/assemble-2.jpeg'></image>
          <view class="imgtwo">Vo</view>
        </view>
        <view class="title">JZR9700</view>
    </view>
</view>

<!-- 中部 -->
<view class="my-center">

   <view class="my-myorder">
        <view class="left">
            <image src="/images/me/我的订单.png"></image>
