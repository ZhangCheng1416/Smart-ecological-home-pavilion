/* pages/products/products.wxss */
.swiper{width:100%;height:340rpx;}
.swiper image{width:100%;height:100%}


.products-main{display: flex;flex-wrap: wrap;}
.products-item{width:340rpx;height:520rpx;margin-left: 23.5rpx;margin-top: 19rpx;border-radius: 6rpx;box-shadow: 2rpx 2rpx 2rpx 2rpx #ccc;position:relative;}
.products-item .star{width:40rpx;height:40rpx;position:absolute;right:20rpx;top:20rpx;}
.products-item .star image{width:100%;height:100%}
.products-item .shop{width:260rpx;height:200rpx;margin:0 auto;margin-top: 100rpx}
.products-item .shop image{width:100%;height:100%}
.products-item .title{font-size: 34rpx;color:#333;padding-left:15rpx;margin-top: 50rpx}
.products-item .name{font-size: 24rpx;color:#999;padding-left:15rpx;margin-top: 15rpx}
.products-item .price{font-size: 32rpx;color:#df0000;padding-left:15rpx;margin-top: 30rpx}

